{
  "version": "1.0",
  "containers": [
    {
      "name": "Sidebar",
      "role": "complementary",
      "selector": ".sidebar",
      "type": "container",
      "children": [
        {
          "name": "CompanyInfo",
          "role": "content",
          "selector": ".company-info",
          "type": "applet"
        },
        {
          "name": "ContactsSection",
          "role": "list",
          "selector": ".contacts",
          "type": "applet",
          "item_selector": ".item"
        },
        {
          "name": "ServiceRequestsSection",
          "role": "list",
          "selector": ".service-requests",
          "type": "applet",
          "item_selector": ".item"
        },
        {
          "name": "OpportunitiesSection",
          "role": "list",
          "selector": ".opportunities",
          "type": "applet",
          "item_selector": ".item"
        }
      ]
    },
    {
      "name": "MainContent",
      "role": "main",
      "selector": ".main-content",
      "type": "container",
      "children": [
        {
          "name": "ActivitySection",
          "role": "region",
          "selector": ".activity-section",
          "type": "container",
          "children": [
            {
              "name": "ActivityCategory",
              "role": "navigation",
              "selector": ".activity-category",
              "type": "applet"
            },
            {
              "name": "ActivityList",
              "role": "list",
              "selector": ".activity-list",
              "type": "applet",
              "item_selector": ".activity-item"
            }
          ]
        }
      ]
    }
  ]
}